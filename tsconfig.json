{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@info": ["src/data/info"]
    }
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext",
      "typeRoots": ["./src/env.d.ts"]
    }
  }
}
