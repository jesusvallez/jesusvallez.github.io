---
import Layout from '@/layouts/Layout.astro'
import Experience from '@/components/Experience.astro'
import SocialMedia from '@/components/SocialMedia.astro'
import Code from '@/components/icons/Code.astro'
import School from '@/components/icons/School.astro'
import Container from '@/components/Container.astro'

import { info } from '@info'

const { name, professionalExp, academicExp } = info
const jobDescription = professionalExp.at(0)?.job.at(0)?.name
const jobCompany = professionalExp.at(0)?.name
---

<Layout title="Porfolio">
  <Container class="mt-2 flex flex-col items-start justify-center gap-10">
    <aside class="flex flex-col gap-8 md:flex-row">
      <picture class="shrink-0">
        <img
          class:list={['h-32 w-32 rounded-full border-2 border-neutral-700 object-cover', 'md:size-40', 'lg:size-48']}
          src="/profile.jpg"
          alt="Imagen de Jesús Vállez"
          width="220"
          height="220"
        />
      </picture>

      <div class="flex flex-col gap-2">
        <h1
          class:list={[
            'mx-0 inline font-bold leading-tight text-transparent [font-size:_clamp(28px,_5vw+12px,_50px)] sm:block md:[font-size:_clamp(28px,_4vw+4px,_50px)]',
            'animate-[gradient_5s_ease_infinite] bg-gradient-to-r from-my-secondary via-my-primary to-my-tertiary bg-[length:150%_100%] bg-clip-text',
          ]}
        >
          {name}
        </h1>
        <h2
          class:list={[
            'mx-0 text-pretty',
            'inline text-h6 font-bold leading-tight sm:block',
            'md:text-h5 md:leading-tight',
          ]}
        >
          Actualmente trabajo como {jobDescription} en {jobCompany}
        </h2>
        <p class="max-w-3xl text-pretty text-body1">
          <span class="text-my-primary">+10 años de experiencia.</span> Crear experiencias digitales define mi profesión
          y hobby.
          <span class="text-my-secondary">Trato de ir siempre más allá</span> involucrandome en el análisis, diseño e implementación
          <span class="text-my-tertiary">con visión crítica.</span>
        </p>
        <SocialMedia items={info.socialMedia} />
      </div>
    </aside>
    <div class="flex w-full shrink grow-0 flex-col items-start justify-between gap-8">
      {
        professionalExp.length > 0 && (
          <Experience name="Experiencia Profesional" job={professionalExp}>
            <Code slot="icon" class="size-8" />
          </Experience>
        )
      }
      {
        academicExp?.length > 0 && (
          <Experience name="Formación Académica" job={academicExp}>
            <School slot="icon" class="size-8" />
          </Experience>
        )
      }
    </div>
  </Container>
</Layout>
