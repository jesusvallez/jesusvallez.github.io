---
import Layout from '@/layouts/Layout.astro'
import Experience from '@/components/Experience.astro'
import SocialMedia from '@/components/SocialMedia.astro'

import { info } from '../data/info'
import Code from '@/components/icons/Code.astro'
import School from '@/components/icons/School.astro'

const { name, aboutMeShort, professionalExp, academicExp } = info
const jobDescription = professionalExp[0].job[0].name
const jobCompany = professionalExp[0].name
---

<Layout>
  <div class="grid w-full max-w-6xl grid-cols-1 grid-rows-1 gap-x-4 gap-y-4 lg:grid-cols-[1fr_1fr]">
    <aside class="mt-8 flex flex-col gap-4 px-6 md:mt-12 lg:px-4">
      <img
        class:list={['h-32 w-32 rounded-full object-cover', 'md:h-40 md:w-40', 'lg:h-52 lg:w-52']}
        src="/profile.png"
        alt="Imagen de Jes√∫s V√°llez"
        width="740"
        height="420"
      />

      <p class="text-body1">
        ¬°Hey! <span data-testid="emoji" role="img" aria-label="Mano saludando">üëãüèª</span>, mi nombre es
      </p>

      <h1
        class:list={[
          'mx-0 inline font-bold leading-tight text-transparent [font-size:_clamp(28px,_5vw+12px,_50px)] sm:block md:[font-size:_clamp(28px,_4vw+4px,_50px)]',
          'animate-[gradient_5s_ease_infinite] bg-gradient-to-r from-my-secondary via-my-primary to-my-tertiary bg-[length:150%_100%] bg-clip-text',
        ]}
      >
        {name}
      </h1>
      <h2
        class:list={[
          'mx-0 text-pretty',
          'inline text-h6 font-bold leading-tight sm:block',
          'md:text-h5 md:leading-tight',
        ]}
      >
        Actualmente trabajo como {jobDescription} en {jobCompany}
      </h2>
      <p class="max-w-3xl text-pretty text-body1">
        {aboutMeShort}
      </p>
      <SocialMedia items={info.socialMedia} />
    </aside>
    <div class="mt-8 flex w-full max-w-6xl flex-col items-start justify-between gap-8 md:mt-12">
      {
        professionalExp.length > 0 && (
          <Experience name="Experiencia Profesional" job={professionalExp}>
            <Code slot="icon" class="size-8" />
          </Experience>
        )
      }
      {
        academicExp?.length > 0 && (
          <Experience name="Formaci√≥n Acad√©mica" job={academicExp}>
            <School slot="icon" class="size-8" />
          </Experience>
        )
      }
    </div>
  </div>
</Layout>
