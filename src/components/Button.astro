---
import type { HTMLAttributes } from 'astro/types'

type ButtonType = HTMLAttributes<'button'>

type Props = {
  id?: ButtonType['id']
  type?: ButtonType['type']
  className?: ButtonType['class']
}

const { id, type, className } = Astro.props
---

<button
  id={id}
  type={type}
  class:list={[
    'px-4 py-2',
    'rounded border border-gray-500 text-xs font-bold uppercase text-gray-800 outline-none transition-all duration-150 ease-linear  ',
    'hover:bg-gray-500 hover:text-white focus:outline-none active:bg-gray-600',
    'dark:border-gray-200 dark:text-gray-100 dark:hover:bg-gray-200 dark:hover:text-black dark:active:bg-gray-400 md:text-sm',
    className,
  ]}
>
  <slot />
</button>
