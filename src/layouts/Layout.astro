---
import { Toaster } from '@/components/ui/toaster'
import MetaHead from '../components/MetaHead.astro'

import '@/styles/globals.css'
export interface Props {
  title: string
  description: string
  ogImagePath: string
  info: {
    name: string
    baseUrl: string
  }
}

const { title, description, ogImagePath, info } = Astro.props
---

<!doctype html>
<html lang="es" class="dark dark-mode">
  <head>
    <MetaHead title={title} description={description} ogImagePath={ogImagePath} info={info} />
  </head>
  <body
    class="bg-dotted-spacing-10 bg-dotted-neutral-800 h-my-screen grid grid-cols-1 grid-rows-[auto_1fr_auto] dark:bg-neutral-900 dark:text-white"
  >
    <slot />
    <Toaster client:load />
  </body>
</html>
